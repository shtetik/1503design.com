%blockquote.nested-fields
  .row.align-items-baseline
    .column.column-40
      = f.select :kind, Image.kinds.keys
    .column.column-40
      = f.file_field :img
    .column.column-10
      = f.check_box :half
      = f.label :half, 'Half?', class: 'label-inline'
    .column.column-10
      .float-right
        = link_to_remove_association "Delete", f