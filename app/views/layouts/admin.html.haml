!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, shrink-to-fit=no, user-scalable=no"}
    %title 01:01Admin
    = stylesheet_link_tag 'admin/main', media: 'all'
    = stylesheet_link_tag '//fonts.googleapis.com/css?family=Roboto+Slab', media: 'all'
    = javascript_include_tag 'admin'
    = csrf_meta_tags
  %body
    %nav.navigation
      .container.clearfix
        .navigation__title
          = link_to 'Back to site', root_path
        %ul.navigation__list
          - if signed_in?
            %li.navigation__item
              = link_to 'Works', admin_works_path, class: 'navigation__link'
            %li.navigation__item
              = link_to 'Tags', admin_tags_path, class: 'navigation__link'
            %li.navigation__item
              = link_to "Sign out", sign_out_path, method: :delete, class: 'navigation__link'
          - else
            %li.navigation__item
              = link_to "Sign in", sign_in_path, class: 'navigation__link'
    %main.container
      = yield